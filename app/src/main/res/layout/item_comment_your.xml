<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="3dp"
              android:layout_marginTop="4dp"
              android:gravity="right"
        >


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/comment_body_shape"
            android:paddingLeft="16dp"
            android:elevation="4dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            >

        <TextView
                android:id="@+id/tv_comment_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                />

        <TextView
                android:id="@+id/tv_comment_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="11"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                />

        <TextView
                android:id="@+id/tv_comment_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 June 2014 at 12:00"
                android:layout_marginBottom="8dp"
                android:textColor="@color/grey"
                />
    </LinearLayout>

    <TextView
            android:id="@+id/tv_comment_item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:text="A"
            android:gravity="center"
            android:elevation="2dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/your_comment_shape"
            />

</LinearLayout>