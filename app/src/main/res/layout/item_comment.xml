<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="3dp"
              android:layout_marginTop="4dp">
    <ImageView
            android:id="@+id/iv_comment_item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"/>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp">
        <TextView
                android:id="@+id/tv_comment_item_author"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:id="@+id/tv_comment_item_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="This could be your comment. This could be your comment. This could be your comment."
                android:layout_marginBottom="8dp"/>
        <TextView
                android:id="@+id/tv_comment_item_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="13 June 2014 at 12:00"
                android:layout_marginBottom="8dp"
                android:textColor="@color/grey"/>
    </LinearLayout>
</LinearLayout>